@M_KOJO_MESSAGE_COM_K76_DANMAKU(ARGS, 相手残機)
#DIM 相手残機
;전체의 흐름
;①【전투 전】→②다이스 롤과플레이어 선택지, 핸디캡을 붙였을 경우는【핸디캡 말】→③대응 스킬이 발동했을 경우【스킬 말】→④피탄 판정, 캐릭터가 피탄하고 싶은들【피탄 말】→
;어느 쪽인가의잔기가 0으로 되어 있지 않으면②에 돌아오는→⑤【전투후 말】

;--------------------------------------------------
;기입 체크(=0, 비표시, 1, 표시)
LOCAL = 0
;-------------
IF LOCAL
SIF FLAG:대사색깔
	TRYCALLFORM M_KOJO_COLOR_K{NO:TARGET}
	;-------------------------------------------------
	;소분기
	;-------------------------------------------------
	;전투전
	HANDICAP_FIXED = 0
	HANDICAP_RAND = 0
	;핸디캡을 붙일 수가 있어 수치가 큰 만큼 당신이 불리하게 되는 수치가 부라면 당신이 유리하게
	;캐릭터의 능력에 관련되지 않고 쿠소 강하게 하거나 약하게 하거나 할 수 있다
	;기입 체크(=0, 비표시, 1, 표시)
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "戦闘前"
		PRINTFORML 
		RETURN 0
	ENDIF
	;-------------------------------------------------
	;핸디캡
	;기입 체크(=0, 비표시, 1, 표시)
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "ハンデ"
		;핸디캡 붙이지 않았으면 표시되지 않기 때문에 무기입으로 좋다
		PRINTFORML 
		RETURN 0
	ENDIF
	;-------------------------------------------------
	;전투중 TARGET 피탄시 말
	;기입 체크(=0, 비표시, 1, 표시)
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "被弾" 
		;별로 일률적이어 「당했다―」만이라도 좋아
		SELECTCASE 相手残機
			;나머지잔기 3이 표시되는 것은【습람심식】소유만
			CASE 3
				PRINTFORML 
			CASE 2
				PRINTFORML 
			CASE 1
				PRINTFORML 
			CASE 0
				PRINTFORML 
		ENDSELECT
	ENDIF
	;-------------------------------------------------
	;전투중
	;TARGET의【잔인혹박】발동시
	;ARG는 TARGET의 잔기
	;기입 체크(=0, 비표시, 1, 표시)
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "残忍酷薄"
		
	ENDIF
	;-------------------------------------------------
	;전투중
	;TARGET의【乾坤一擲】발동시
	;ARG는 TARGET의 잔기
	;기입 체크(=0, 비표시, 1, 표시)
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "乾坤一擲"
		
	ENDIF
	;-------------------------------------------------
	;전투중
	;TARGET의【괴력란신】발동시
	;ARG는 TARGET의 잔기
	;기입 체크(=0, 비표시, 1, 표시)
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "怪力乱神"
		
	ENDIF
	
	;-------------------------------------------------
	;전투후
	;기입 체크(=0, 비표시, 1, 표시)
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "戦闘後" 
		PRINTFORML 
		;나머지잔기 4가 표시될 수 있는 것은【습람심식】소유만
		;잔기가 1이상이라면 당신이 져, 0의 경우는 당신인 승리
		SELECTCASE 相手残機
			CASE 4
				PRINTFORML 
			CASE 3
				PRINTFORML 
			CASE 2
				PRINTFORML 
			CASE 1
				PRINTFORML 
			CASE 0
				PRINTFORML 
		ENDSELECT
	ENDIF
RESETCOLOR
ENDIF
RETURN 1

