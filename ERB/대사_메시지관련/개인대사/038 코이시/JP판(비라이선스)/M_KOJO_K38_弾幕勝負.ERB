@M_KOJO_JP판_MESSAGE_COM_K38_DANMAKU(ARGS, 相손残機)
#DIM 相손残機
;全体の流れ
;①【戦闘前】→②ダイスロールとプレイヤー選択肢、ハンデをつけた場合は【ハンデ구上】→③対応スキルが発動した場合【スキル구上】→④被弾判定、キャラが被弾したなら【被弾구上】→
;どちらかの残機が0になっていなければ②に戻る→⑤【戦闘後구上】

;--------------------------------------------------
;記入チェック（=0, 非表示、1, 表示）
LOCAL = 1
;-------------
IF LOCAL
SIF FLAG:구상색
	TRYCALLFORM M_KOJO_JP판_COLOR_K{NO:TARGET}
	;-------------------------------------------------
	;小分岐
	;-------------------------------------------------
	;戦闘前
	HANDICAP_FIXED = 0
	HANDICAP_RAND = 0
	;ハンデをつけることができ、数値が大きいほど당신が不利になる　数値が負なら당신が有利に
	;キャラの能力に関わらずクッソ強くしたり弱くしたりできる
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "戦闘前"
		IF ALCOHOL_FACE(38) == "주정꾼" || ALCOHOL_FACE(38) == "곤드레만드레"
			PRINTFORMW 「弾幕ごっこ～？ いいよぉ～……ひっく」
		ELSEIF TALENT:38:기분 == -1 || CFLAG:38:빡침 || MARK:38:반발각인 >= 3
			PRINTFORMW 「もしもーし、今당신を仕留めに行くの～♪」
		ELSE
			SELECTCASE RAND:3
			CASE 1
				PRINTFORMW 「もしもーし、今당신の後ろにいるの♪」
			CASE 2
				PRINTFORMW 「いいよ、相손になってあげる♪」
			CASEELSE
				PRINTFORMW 「私を捉えられるかな～♪」
			ENDSELECT
		ENDIF
		RETURN 0
	ENDIF
	;-------------------------------------------------
	;ハンデ
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "ハンデ"
		;ハンデつけなかったら表示されないので無記入でよい
		PRINTFORML 
		RETURN 0
	ENDIF
	;-------------------------------------------------
	;戦闘中TARGET被弾時구上
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "被弾"
		;最後
		IF 相손残機 == 0
			IF ALCOHOL_FACE(38) == "주정꾼" || ALCOHOL_FACE(38) == "곤드레만드레"
				PRINTFORML 「……ひゃえ？」
			ELSEIF TALENT:38:기분 == -1 || CFLAG:38:빡침 || MARK:38:반발각인 >= 3
				PRINTFORML 「あ……」
			ELSE
				SELECTCASE RAND:3
				CASE 1
					PRINTFORML 「……きゃあ！？」
				CASE 2
					PRINTFORML 「……あれれ？」
				CASEELSE
					PRINTFORML 「……ありゃりゃ？」
				ENDSELECT
			ENDIF
		ELSE
			IF ALCOHOL_FACE(38) == "주정꾼" || ALCOHOL_FACE(38) == "곤드레만드레"
				SELECTCASE RAND:3
				CASE 1
					PRINTFORML 「ありぇ～！」
				CASE 2
					PRINTFORML 「ひゃあぁ～！」
				CASEELSE
					PRINTFORML 「いったーいぃ～～！」
				ENDSELECT
			ELSEIF TALENT:38:기분 == -1 || CFLAG:38:빡침 || MARK:38:반발각인 >= 3
				SELECTCASE RAND:3
				CASE 1
					PRINTFORML 「つぅっ……！」
				CASE 2
					PRINTFORML 「あはははは！！ 痛いなぁもう！！」
				CASEELSE
					PRINTFORML 「あっはっは！ バラバラにしてあげるから待っててね？」
				ENDSELECT
			ELSE
				SELECTCASE RAND:10
				CASE 1
					PRINTFORML 「いったーい！」
				CASE 2
					PRINTFORML 「わわっ！」
				CASE 3
					PRINTFORML 「捉えられたっ！？」
				CASE 4
					PRINTFORML 「ぴぇっ！」
				CASE 5
					PRINTFORML 「きゃあっ！」
				CASE 6
					PRINTFORML 「もしかして、見えてるっ！？」
				CASE 7
					PRINTFORML 「～～～～ッ！」
				CASE 8
					PRINTFORML 「ちょっ…タイムタイム～！」
				CASE 9
					PRINTFORML 「や、やるわねっ！」
				CASEELSE
					PRINTFORML 「いたたたたっ！？」
				ENDSELECT
			ENDIF
		ENDIF
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【残忍酷薄】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "残忍酷薄"
		SELECTCASE RAND:3
		CASE 1
			PRINTFORML 「そ～れ！ 無意識『弾幕のロールシャッハ』！！」
		CASE 2
			PRINTFORML 「かわせるかなぁ～？ 反応『妖怪ポリフラフ』！！」
		CASEELSE
			PRINTFORML 「いくよ！ 『サブタレイニアンローズ』！！」
		ENDSELECT
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【乾坤一擲】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "乾坤一擲"
		
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【怪力乱神】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "怪力乱神"
		
	ENDIF
	
	;-------------------------------------------------
	;戦闘後
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "戦闘後" 
		PRINTFORML 
		;残り残機4が表示されうるのは【洽覧深識】持ちのみ
		;残機が1以上なら당신の負け、0の場合は당신の勝利
		;당신勝利
		IF 相손残機 == 0
			IF ALCOHOL_FACE(38) == "주정꾼" || ALCOHOL_FACE(38) == "곤드레만드레"
				PRINTFORMW 「うえぇぇ、酔いが回ってきもちわるいぃ～……」
			ELSEIF TALENT:38:기분 == -1 || CFLAG:38:빡침 || MARK:38:반발각인 >= 3
				PRINTFORMW 「そんなー。%CALLNAME:MASTER%に負けるなんてー」
			ELSE
				PRINTFORML 「はあはあ……っ」
				SELECTCASE RAND:5
				CASE 1
					PRINTFORMW 「も、もう無理～！ 손가락一本動かないわ～…」
				CASE 2
					PRINTFORMW 「あーあ、負けちゃった…」
				CASE 3
					PRINTFORMW 「私の事をこうも完ぺきに捉えるなんて―」
				CASE 4
					PRINTFORMW 「%CALLNAME:MASTER%って、意外と強かったのね…」
				CASEELSE
					PRINTFORMW 「もしもーし、今당신の前に倒れてるのー……ガクリ」
				ENDSELECT
			ENDIF
		;코이시勝利
		ELSE
			IF ALCOHOL_FACE(38) == "주정꾼" || ALCOHOL_FACE(38) == "곤드레만드레"
				PRINTFORMW 「あっはっはっは！ 変なかっこ～♪」
			ELSEIF TALENT:38:기분 == -1 || CFLAG:38:빡침 || MARK:38:반발각인 >= 3
				PRINTFORMW 「このままいつ死ぬのか試してみたーい♪」
			ELSE
				SELECTCASE RAND:5
				CASE 1
					PRINTFORMW 「わーい、たのしーい！ こりゃやみつきになっちゃうね」
				CASE 2
					PRINTFORMW 「もっと本能で闘えば良いのよ」
				CASE 3
					PRINTFORMW 「あれー？ あっけないのね」
				CASE 4
					PRINTFORMW 「もしもーし、今貴方の背中の上にいるの」
				CASEELSE
					PRINTFORMW 「やったー！ 私の勝ち！！ %CALLNAME:MASTER%、まだまだだね♪」
				ENDSELECT
				TALENT:38:기분 = 1
			ENDIF
		ENDIF
	ENDIF
RESETCOLOR
ENDIF
RETURN 1

